<div class="bg-light">
    <section class="container container-fluid mt-5 mb-5">
        <div class="d-flex justify-content-center">
            <div class="card" style="width: 32rem;">
                <img class="imgCoffee card-img-top" src="{{picture}}" alt="Coffeeshop Picture">
                <div class="card-body">
                    <h5 class="card-title font-weight-bold">{{name}}</h5>
                    <p class="card-text">{{address}}</p>
                    <div class="bg-warning rounded p-2">
                        <p class="text-right font-weight-bold mr-3">Price Range: {{price_range}}</p>
                        <p class="text-right font-weight-bold mr-3">Rating: {{rating}}</p>
                    </div>
                </div>
                <div class="card-body bg-secondary d-flex justify-content-center">
                    <a href="#newFeedback" class="card-link"><i class="fas fa-comment-dots"></i> Add
                        Feedback</a>
                    <a href="tel:{{phoneNumber}}" class="card-link"><i class="fas fa-phone-alt"></i> Call</a>
                    <a href="https://www.google.com/maps/search/?api=1&query={{encodeURIComponent address}}"
                        target="_blank" class="card-link"><i class="fas fa-map-marker-alt"></i> Directions</a>
                    <a href="{{website}}" class="card-link"><i class="fas fa-globe"></i> Website</a>
                </div>
            </div>

        </div>
        <div class="d-flex justify-content-center">
            <div class="mt-3" id="map" data-lat="{{latitude}}" data-lng="{{longitude}}" data-name="{{name}}">
            </div>
        </div>
        {{#if loggedIn}}
        <div class="card mt-3 mb-3 bg-light">
            <div class="card-header bg-secondary">
                <h5 class="text-light">Discover what our coffee lovers are saying! ðŸŒŸ</h5>
            </div>
            <div class="card-body">
                {{#each Feedbacks as |feedback|}}
                <div class="card mb-3">
                    <div class="card-body">
                        <h2>{{feedback.description}}</h2>
                        <span class="text-muted">created on {{format_date feedback.created_on}}</span>
                        <p>By: {{feedback.user.username}}</p>
                        <div class="d-flex justify-content-end">
                            <button class="btn btn-info mr-3" onclick="location.href='/api/feedbacks/{{feedback.id}}/edit'">Edit</button>
                            <button class="btn btn-md btn-danger deleteFeedbackBtn" data-id="{{feedback.id}}">Delete</button>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>

        </div>

        <div class="card mt-3 mb-3">
            <div class="card-header">
                <h5>Let us know your thoughts about this place.. ðŸŒŸ</h5>
            </div>
            <div class="card-body">
                <div class="card mb-2 bg-secondary">
                <form class="form feedback-form" data-coffeeshop-id="{{id}}">
                    <div class="form-group col-12 mt-2 text-light">
                        <label for="newFeedback">New Feedback:</label>
                            
                    </div >
                    <div class="form-group col-12">
                        <textarea class="form-input col-12 pt-1" id="newFeedback" rows="3" placeholder="Please provide your feedback about this place." required></textarea>

                    </div>
                    <div class="col-12">
                            <button class="btn btn-info mb-1" type="submit">Add Feedback</button>

                    </div>
                </form>

                </div>
            </div>


        </div>
        {{/if}}

    </section>

</div>





<script src="/js/map.js"></script>
<script src="/js/addFeedback.js"></script>
<script src="/js/deleteFeedBack.js"></script>