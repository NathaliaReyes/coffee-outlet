<div class="d-flex justify-content-center">
    <div class="card" style="width: 32rem;">
        <img class="imgCoffee card-img-top" src="{{picture}}" alt="Coffeeshop Picture">
        <div class="card-body">
            <h5 class="card-title">{{name}}</h5>
            <p class="card-text">{{address}}</p>
        </div>
        <div class="card-body">
            <a href="/api/feedbacks/addfeedback" class="card-link"><i class="fas fa-comment-dots"></i> Add Feedback</a>
            <a href="tel:{{phoneNumber}}" class="card-link"><i class="fas fa-phone-alt"></i> Call</a>
            <a href="https://www.google.com/maps/search/?api=1&query={{encodeURIComponent address}}" target="_blank"
                class="card-link"><i class="fas fa-map-marker-alt"></i> Directions</a>
            <a href="{{website}}" class="card-link"><i class="fas fa-globe"></i> Website</a>
        </div>
    </div>

</div>

<div class="d-flex justify-content-center">
    <div class="mt-3" id="map" data-lat="{{latitude}}" data-lng="{{longitude}}" data-name="{{name}}"></div>
</div>
<div class="d-flex justify-content-center">
    <span>{{price_range}}</span>
</div>
    
