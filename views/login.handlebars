<section class="bg pt-5 pb-5">
  <div class="d-flex justify-content-center">
    <div class="ml-2 mr-2 col-md-6 containerform">
      <h2 class="page-title">Please Login</h2>
      <form class="form login-form">
        <div class="form-group-login">
          <input class="form-input" type="email" id="email-login" required />
          <label for="email-login">Email:</label>
        </div>
        <div class="form-group-login">
          <input class="form-input" type="password" id="password-login" required />
          <label for="password-login">Password:</label>
        </div>
        <div class="form-group button-container">
          <button class="btn btn-primary" type="submit">Log In!</button>
        </div>
        <div>
          <p class="text">Don't have an account? <a href="/signup">Register</a></p>
        </div>
      </form>
    </div>
  </div>

</section>

